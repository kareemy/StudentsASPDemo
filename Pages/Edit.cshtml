@page
@model StudentsASPDemo.Pages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<form method="post">
    <input type="hidden" asp-for="Student.StudentID">
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Student.FirstName" class="form-label"></label>
            <input asp-for="Student.FirstName" class="form-control">
            <span asp-validation-for="Student.FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Student.LastName" class="form-label"></label>
            <input asp-for="Student.LastName" class="form-control">
            <span asp-validation-for="Student.LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Student.Age" class="form-label"></label>
            <input asp-for="Student.Age" class="form-control">
            <span asp-validation-for="Student.Age" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-4">
            <label asp-for="Student.Major" class="form-label"></label>
            <input asp-for="Student.Major" class="form-control">
            <span asp-validation-for="Student.Major" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}